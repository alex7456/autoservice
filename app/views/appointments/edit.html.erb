<h1>Редактирование записи</h1>

<%= form_with(model: @appointment, local: true) do |form| %>
  <div>
    <%= form.label :customer_id, "Клиент" %>
    <%= form.collection_select :customer_id, Customer.all, :id, :name %>
  </div>

  <div>
    <%= form.label :car_id, "Автомобиль" %>
    <%= form.collection_select :car_id, Car.all, :id, :license_plate %>
  </div>

  <div>
    <%= form.label :service_id, "Услуга" %>
    <%= form.collection_select :service_id, Service.all, :id, :name %>
  </div>

  <div>
    <%= form.label :date, "Дата записи" %>
    <%= form.datetime_select :date %>
  </div>

  <div>
    <%= form.submit "Сохранить изменения", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Назад к списку", appointments_path, class: "btn btn-primary" %>
<%= link_to "На главную", root_path, class: "btn btn-secondary" %>
