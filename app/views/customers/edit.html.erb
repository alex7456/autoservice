<h1>Редактирование клиента</h1>

<%= form_with(model: @customer, local: true) do |form| %>
  <div>
    <%= form.label :name, "Имя" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :phone, "Телефон" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :email, "Email" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.submit "Сохранить изменения", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to "Назад к списку", customers_path, class: "btn btn-primary" %>
<%= link_to "На главную", root_path, class: "btn btn-secondary" %>
