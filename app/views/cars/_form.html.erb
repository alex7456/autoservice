<% if @car.errors.any? %>
  <div class="alert alert-danger">
    <h4>Ошибки:</h4>
    <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @car, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :license_plate, "Номерной знак", class: "form-label" %>
    <%= f.text_field :license_plate, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :brand, "Марка", class: "form-label" %>
    <%= f.text_field :brand, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :model, "Модель", class: "form-label" %>
    <%= f.text_field :model, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :year, "Год выпуска", class: "form-label" %>
    <%= f.number_field :year, class: "form-control" %>
  </div>

  <%= f.submit "Добавить автомобиль", class: "btn btn-success" %>
<% end %>
