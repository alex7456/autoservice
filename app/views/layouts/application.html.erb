<!DOCTYPE html>
<html>
<head>
  <title>Autoservice</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 5 CDN (CSS) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap 5 CDN (JS) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <%= javascript_include_tag "application" %>
    <%= javascript_importmap_tags %>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">Автосервис</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "Автомобили", cars_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Клиенты", customers_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Услуги", services_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Записи", appointments_path, class: "nav-link" %></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <%= yield %>
</div>
</body>
</html>
