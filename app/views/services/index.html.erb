<h1>Список услуг</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Название</th>
    <th>Цена</th>
    <th>Действия</th>
  </tr>
  <% @services.each do |service| %>
    <tr>
      <td><%= service.id %></td>
      <td><%= service.name %></td>
      <td><%= service.price %></td>
      <td>
        <%= link_to "Редактировать", edit_service_path(service) %> |
        <%= link_to "Удалить", service, method: :delete, data: { confirm: "Вы уверены?" } %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Добавить услугу", new_service_path %>
